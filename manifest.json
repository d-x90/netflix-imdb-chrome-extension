{
    "manifest_version": 2,
    "name": "NETFLIX with IMDb rating",
    "author": "Tóth Krisztián Gyula",
    "version": "0.0.1",
    "description": "Browse NETFLIX with IMDb ratings",
    "icons": {
        "128": "icon128.png",
        "16": "icon16.png",
        "48": "icon48.png"
    },
    "content_scripts": [
        {
            "css": [
                "css/styles.css"
            ],
            "js": [
                "js/content.js"
            ],
            "matches": [
                "https://www.netflix.com/browse"
            ]
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}