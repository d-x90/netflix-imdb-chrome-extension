{
    "manifest_version": 2,
    "name": "NETFLIX with IMDb rating",
    "version": "0.1.0",
    "description": "Browse NETFLIX with IMDb ratings",
    "content_scripts": [
        {
            "css": [
                "css/styles.css"
            ],
            "js": [
                "js/content.js"
            ],
            "matches": [
                "https://www.netflix.com/browse"
            ]
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    }
}